                  <JFXTextField fx:id="nameText" focusColor="#53acdf" labelFloat="true" layoutX="25.0" layoutY="84.0" prefHeight="40.0" prefWidth="250.0" promptText="Name" text="Sabit" unFocusColor="#93cbeb" />
