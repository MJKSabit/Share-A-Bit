            <JFXButton fx:id="homeButton" onAction="#showHome" prefHeight="48.0" prefWidth="99.0" text="Home" textFill="WHITE">
               <graphic>
                  <ImageView fitHeight="28.0" fitWidth="29.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/home.png" />
                     </image>
                  </ImageView>
               </graphic>
               <font>
                  <Font size="11.0" />
               </font>
            </JFXButton>
            <JFXButton fx:id="settingsButton" layoutX="101.0" onAction="#showSettings" prefHeight="48.0" prefWidth="99.0" text="Settings" textFill="WHITE">
               <graphic>
                  <ImageView fitHeight="28.0" fitWidth="29.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/settings.png" />
                     </image>
                  </ImageView>
               </graphic>
               <font>
                  <Font size="11.0" />
               </font>
            </JFXButton>
            <JFXButton fx:id="aboutButton" layoutX="200.0" onAction="#showAbout" prefHeight="48.0" prefWidth="99.0" text="About" textFill="WHITE">
