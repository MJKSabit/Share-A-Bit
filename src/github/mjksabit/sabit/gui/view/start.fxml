                              <Image url="@../images/send-white.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </JFXButton>
                  <JFXButton fx:id="receiveButton" contentDisplay="BOTTOM" graphicTextGap="20.0" layoutX="75.0" layoutY="200.0" onAction="#startReceive" prefHeight="180.0" prefWidth="150.0" ripplerFill="WHITE" style="-fx-background-color: #1a8cff; -fx-background-radius: 0px 0px 100px  100px;" text="RECEIVE" textFill="WHITE">
