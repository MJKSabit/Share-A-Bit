            <Label layoutX="61.0" layoutY="14.0" text="Make sure receiver is ready..." textFill="#d03c3c" />
         </children>
      </Pane>
      <Pane fx:id="fileSelectionPane" layoutY="55.0" prefHeight="399.0" prefWidth="300.0">
         <children>
            <Label layoutX="20.0" layoutY="11.0" text="Files">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <ListView fx:id="fileList" layoutY="44.0" prefHeight="292.0" prefWidth="300.0" />
            <JFXButton contentDisplay="GRAPHIC_ONLY" graphicTextGap="0.0" layoutX="201.0" layoutY="3.0" onAction="#addFolder" style="-fx-background-color: #99ccff;" text="+ Folder">
               <graphic>
                  <ImageView fitHeight="26.0" fitWidth="26.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/add-folder.png" />
                     </image>
                  </ImageView>
               </graphic></JFXButton>
            <JFXButton contentDisplay="GRAPHIC_ONLY" graphicTextGap="0.0" layoutX="251.0" layoutY="4.0" onAction="#addFile" style="-fx-background-color: #99ccff;" text="+ Folder">
               <graphic>
                  <ImageView fitHeight="25.0" fitWidth="26.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/add-file.png" />
                     </image>
                  </ImageView>
               </graphic>
            </JFXButton>
            <JFXButton buttonType="RAISED" layoutX="20.0" layoutY="357.0" onAction="#senderSelection" prefHeight="28.0" prefWidth="260.0" style="-fx-background-color: #33cc33;" text="Next &gt;&gt;" textFill="WHITE" />
