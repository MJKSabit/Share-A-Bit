      <Pane prefHeight="55.0" prefWidth="300.0" style="-fx-background-color: #2c9dd7;">
         <children>
            <Label layoutX="24.0" layoutY="9.0" prefHeight="40.0" prefWidth="181.0" text="Share A BIT" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="30.0" />
               </font>
            </Label>
         </children>
      </Pane>
      <JFXButton buttonType="RAISED" layoutX="20.0" layoutY="460.0" onAction="#cancelSending" prefHeight="28.0" prefWidth="260.0" style="-fx-background-color: #ff4d4d;" text="Cancel" textFill="WHITE" />
      <Pane fx:id="receiverSelectionPane" disable="true" layoutY="55.0" prefHeight="399.0" prefWidth="300.0" visible="false">
         <children>
            <ListView fx:id="receiverList" layoutX="6.0" layoutY="86.0" prefHeight="254.0" prefWidth="284.0" />
            <Label layoutX="8.0" layoutY="54.0" text="Receiver(s) on Network" />
